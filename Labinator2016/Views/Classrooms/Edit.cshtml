@model Labinator2016.Lib.Models.Classroom
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ClassroomId)
        @Html.Hidden("SessionId", (String)ViewBag.Session)
            <div class="row wide" id="DCRow">
                @Html.LabelFor(model => model.DataCenterId, htmlAttributes: new { @class = "control-label col-sm-2 col-xs-12" })
                <div class="col-sm-9 col-xs-12">
                    @Html.DropDownList("DataCenterId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DataCenterId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row wide" id="CrsRow">
                @Html.LabelFor(model => model.CourseId, htmlAttributes: new { @class = "control-label col-sm-2 col-xs-12" })
                <div class="col-sm-9 col-xs-12">
                    @Html.DropDownList("CourseId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CourseId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row wide" id="UserRow">
                @Html.LabelFor(model => model.UserId, "UserId", htmlAttributes: new { @class = "control-label col-sm-2 col-xs-12" })
                <div class="col-sm-9 col-xs-12">
                    @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row wide" id="DateRow">
                @Html.LabelFor(model => model.Start, htmlAttributes: new { @class = "control-label col-sm-2 col-xs-12" })
                <div class="col-sm-9 col-xs-12">
                    <div class="form-group">
                        <div class='input-group date' id='datetimepicker'>
                            @Html.EditorFor(model => model.Start, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Start, "", new { @class = "text-danger" })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar">
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row wide" id="Table">
                <div class="col-sm-12">
                    <table width="100%" class="table table-striped table-bordered" id="datatable" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Student</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <div class="row wide" id="ButtonRow">
                <div class="col-sm-offset-2 col-sm-8 col-xs-12" align="center">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Add Seats</h4>
                    </div>
                    <div class="modal-body">
                        <p>Paste the email addresses of the new students below:</p>
                        <p><textarea name="newseats" id="newseats" rows="5" cols="50"></textarea></p>\
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="addUser()">Add</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal" onclick="cancelAdd()">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
}

@section Scripts {
    <script src="~/Scripts/ClassroomEdit.js" language="javascript"></script>
}
