@model Labinator2016.ViewModels.IndexViewModel
@using (Html.BeginForm("Index", "Home", FormMethod.Post
                            ))
{
    @Html.AntiForgeryToken()
    <br />
    <label>
        @Html.RadioButtonFor(model => model.ShowAll, true, htmlAttributes: new { onchange = "$(this).closest('form').submit()" })
        Show All Classrooms
    </label>
    <label>
        @Html.RadioButtonFor(model => model.ShowAll, false, htmlAttributes: new { onchange = "$(this).closest('form').submit()" })
        Show My Classrooms
    </label>
    <p>
        <table width="100%" class="table table-striped table-bordered" id="datatable" cellspacing="0">
            <thead>
                <tr>
                    <th>Start</th>
                    <th>Course</th>
                    <th>Region</th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Start</th>
                    <th>Course</th>
                    <th>Region</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </p>
}
@section Scripts {
    <script src="~/Scripts/HomeIndex.js" language="javascript"></script>
    <script>
        $(document).load(refreshList(aj, dc, columnRows));
        $("div.toolbar").html('<center>@Html.ActionLink(linkText: "Add",
        actionName: "Edit",
        controllerName: "Classrooms",
        routeValues: new { Id = 0 },
        htmlAttributes: new { @class = "btn btn-primary" })</center>');
    </script>
}
